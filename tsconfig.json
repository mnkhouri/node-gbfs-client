{
    "compilerOptions": {
        "module": "commonjs",
        "outDir": "./lib",
        "allowJs": false,
        "target": "es6",
        "noEmitOnError": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "declaration": true
    },
    "include": [
        "./src/*"
    ]
}
